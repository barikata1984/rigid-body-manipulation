<mujoco model="manipulator">
  <size nuser_body="1"/>

  <visual>
    <global offwidth="1980" offheight="1080"/>
  </visual>

  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
  </asset>

  <worldbody>
    <light name="top" pos="0 0 3"/>
    <body name="link1" pos="0 0 .01">
      <joint name="tx" type="slide" axis="1 0 0"/>
      <inertial pos="0 0 0" mass="1" diaginertia=".00001 .00001 .00001"/>
      <body name="link2">
        <joint name="ty" type="slide" axis="0 1 0"/>
        <inertial pos="0 0 0" mass="1" diaginertia=".00001 .00001 .00001"/>
        <body name="link3">
          <joint name="tz" type="slide" axis="0 0 1"/>
          <inertial pos="0 0 0" mass="1" diaginertia=".00001 .00001 .00001"/>
          <body name="link4">
            <joint name="rx" type="hinge" axis="1 0 0"/>
            <inertial pos="0 0 0" mass="1" diaginertia=".00001 .00001 .00001"/>
            <body name="link5">
              <joint name="ry" type="hinge" axis="0 1 0"/>
              <inertial pos="0 0 0" mass="1" diaginertia=".00001 .00001 .00001"/>
              <body name="link6">
                <joint name="rz" type="hinge" axis="0 0 1"/>
                <inertial pos="0 0 0" mass="1" diaginertia=".00001 .00001 .00001"/>
                <site name="attachment"/>
                <camera name="tracking" mode="track"/>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="mtr_tx" joint="tx"/>
    <motor name="mtr_ty" joint="ty"/>
    <motor name="mtr_tz" joint="tz"/>
    <motor name="mtr_rx" joint="rx"/>
    <motor name="mtr_ry" joint="ry"/>
    <motor name="mtr_rz" joint="rz"/>
  </actuator>

  <sensor>
    <!-- 6 x scalar -->
    <actuatorfrc name="frc_tx" actuator="mtr_tx"/>  <!-- type int: 15 -->
    <actuatorfrc name="frc_ty" actuator="mtr_ty"/>
    <actuatorfrc name="frc_tz" actuator="mtr_tz"/>
    <actuatorfrc name="frc_rx" actuator="mtr_rx"/>
    <actuatorfrc name="frc_ry" actuator="mtr_ry"/>
    <actuatorfrc name="frc_rz" actuator="mtr_rz"/>
    <!-- 4 x 3-vector -->
    <framelinvel name="linvel_x_obj" objtype="body" objname="target/object"/>  <!-- type int: 30 -->
    <frameangvel name="angvel_x_obj" objtype="body" objname="target/object"/>  <!-- type int: 31 -->
    <framelinacc name="linacc_x_obj" objtype="body" objname="target/object"/>  <!-- type int: 32 -->
    <frameangacc name="angacc_x_obj" objtype="body" objname="target/object"/>  <!-- type int: 33 -->
  </sensor>

  <keyframe>
    <key name="initial_state" qpos="1 1 1 0 0 0"/>
  </keyframe>
</mujoco>
